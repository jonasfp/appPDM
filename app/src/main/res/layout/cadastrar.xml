<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Cadastrar">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        app:title="@string/cadastrar"
        app:titleCentered="true"
        app:titleTextColor="@color/white"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_marginBottom="60dp"/>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edt_PesquisarApartamento"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/rounded_edittext"
            android:backgroundTint="@color/cinzaclaro"
            android:text="@string/apartamento"
            android:textAlignment="center"
            android:textColor="#959595"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/imgCadastrarLocalizar"
            android:layout_width="53dp"
            android:layout_height="47dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/edt_PesquisarApartamento"
            android:src="@drawable/imgBuscar"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/txtCadastrarLocalizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apartamento localizado"
        android:textSize="15dp"
         android:textAlignment="center"
        android:textColor="@color/orange"/>

    <ImageView
        android:id="@+id/imgCadastrarFoto"
        android:layout_width="82dp"
        android:layout_height="71dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/imgCamera" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_criarCadastrarProduto"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="300dp"
        android:text="@string/cadastrar"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:backgroundTint="@color/orange"
        app:cornerRadius="15dp" />

</LinearLayout>